{{#each todos}}
  <div class="card card-body mb-2">
    <h4>{{this.title}}</h4>
    <p>{{this.details}}</p>
    <p>Due date: {{this.dueDate}}</p>
    <p>Creation date: {{this.creationDate}}</p>
    <a class="btn btn-dark btn-block mb-2" href="/todos/edit/{{this._id}}">Edit</a>
    <form method="post" action="/todos/{{this._id}}?_method=DELETE">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" class="btn btn-danger btn-block" value="Delete">
    </form>
  </div>
{{else}}
  <h2>No todos listed</h2>
{{/each}}